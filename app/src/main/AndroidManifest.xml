<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.openwebnet"
    android:versionCode="47"
    android:versionName="@string/app_version_number">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        tools:replace="android:appComponentFactory"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:name=".OpenWebNetApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.device.DeviceActivity"
            android:label="@string/activity_device"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.device.LightActivity"
            android:label="@string/activity_light"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.device.AutomationActivity"
            android:label="@string/activity_automation"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.device.IpcamActivity"
            android:label="@string/activity_ipcam"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.device.IpcamStreamActivity"
            android:label="@string/activity_ipcam"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.device.TemperatureActivity"
            android:label="@string/activity_temperature"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.device.ScenarioActivity"
            android:label="@string/activity_scenario"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.device.EnergyActivity"
            android:label="@string/activity_energy"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.device.SoundActivity"
            android:label="@string/activity_sound"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.profile.ProfileActivity"
            android:label="@string/activity_profiles"
            android:parentActivityName=".view.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.openwebnet.view.MainActivity" />
        </activity>
    </application>

</manifest>